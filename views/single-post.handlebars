{{> main-header post.main-header}}

<main>
{{> post-info post}}

{{#if loggedIn}}
    <section class ="px-5">
        <div class="card">
            <form id="comment-form" class="card-body">
                <section class="card-header text-center bg-warning">Comment</section>
                <textarea  name="comment" class="form-control" type="text" autofocus="true"></textarea>
                <section class="pt-2 text-center">
                    <button type="submit" class="btn btn-primary submit-btn">Submit</button>
                </section>
            </form>
        </div>
{{/if}}
</section>

<section class="p-3">
{{> comments post.comments}}
    </section>
</main>
    

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}